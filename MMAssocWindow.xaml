<Window x:Class="NXM_Handler.MMAssocWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NXM_Handler" d:DataContext="{d:DesignInstance Type=local:MMList}"
        mc:Ignorable="d"
        Height="150" Width="200">
    <Window.Resources>
        <ControlTemplate TargetType="TextBox" x:Key="inputBox">
            <Grid>
                <TextBox Text="{Binding Text, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Err if shown"
                       Margin="5,0,5,0"
                       Foreground="#FF808080"
                       FontStyle="Italic"
                       IsHitTestVisible="False"
                       x:Name="UserMessage"
                       Visibility="Hidden"/>
            </Grid>
            <ControlTemplate.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="Text" Value=""/>
                        <Condition Property="IsKeyboardFocusWithin" Value="False"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Visibility" TargetName="UserMessage" Value="Visible"/>
                </MultiTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <Grid x:Name="MainGrid">
        <Grid.Resources>
            
        </Grid.Resources>
        <StackPanel Grid.Column="0" Grid.Row="6" Height="60" VerticalAlignment="Top">
            <StackPanel.Resources>
                <local:MMList x:Key="mmListKey"/>
            </StackPanel.Resources>
            <ComboBox Name="MMDropdown"
                ItemsSource="{StaticResource mmListKey}"
                Text="My Cities"
                IsEditable="false"
                      Width="175"
                      Margin="0,10,0,0"/>
            <TextBlock Text="{Binding ElementName=MMDropdown, Path=SelectedItem}" Width="175"/>
        </StackPanel>
        
        <TextBox x:Name="prefixArgs" Template="{StaticResource inputBox}" Width="75" Height="20" HorizontalAlignment="Left" Margin="10,0,0,10"></TextBox>
        <TextBox x:Name="postfixArgs" Template="{StaticResource inputBox}" Width="75" Height="20" HorizontalAlignment="Right" Margin="0,0,10,10"></TextBox>
        <Button x:Name="SelectButton" Width="60" Height="22" Margin="0,70,0,0" ClickMode="Press" Click="SelectButton_Click">Select</Button>
    </Grid>
</Window>
